<div class="page-header">
  <h1>Add a New Photo</h1>
</div>

<form action="/create_photo" class="form-horizontal">
  

   <!-- Label and input for source -->
  <div class="form-group">
    <label for="source" class="col-sm-2 control-label">
      Image Source
    </label>
    <div class="col-sm-10">
      <input type="text" id="source" name="source" placeholder="Image Source" class="form-control">
    </div>
  </div>


  <!-- Label and input for caption -->
  <div class="form-group">
    <label for="caption" class="col-sm-2 control-label">
      Caption
    </label>
    <div class="col-sm-10">
      <textarea id="caption" name="bio" placeholder="Tell us a little about this photo" class="form-control" rows="3"></textarea>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Add Photo" class="btn btn-primary">
    </div>
  </div>
</form>

